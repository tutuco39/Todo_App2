  <%= form_with(model: @board, local: true) do |f| %>
    <div class="field">
      <%= f.label :Title %><br />
      <%= f.text_field :title, class: "text" %>
    </div>

    <div class="field">
      <%= f.label :Description %><br />
      <%= f.text_area :description %>
    </div>

    <div class="actions">
      <%= f.submit "Submit", class: "btn-primary" %>
    </div>
  <% end %>

