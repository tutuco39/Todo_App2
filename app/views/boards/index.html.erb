<div class="container">
  <h2>All Boards</h2>

  <%= link_to "ログアウト", destroy_user_session_path, data: { method: 'delete' } %>
  <br />

  <% @boards.each do |board| %>
    <div class="card">
      <div class="flex">
        <div class="card_inner">
          <div class="card_title">
            <%= link_to board.title, board_path(board) %>
          </div>
          <div class="card_description">
            <%= board.description %>
          </div>

          <%# アバター表示実装まで仮表示 %>
          <%# アバターはタイトル・本文とレイヤーを分ける %>
          <div class="avatar board_name">
            <p>user_id:<%= board.user_id %></p>
          </div>
        </div>

        <div class="dropdown">
          <i class="fa-solid fa-ellipsis dropbtn"></i>
          <div class="dropdown_content">
            <%= link_to 'Edit', edit_board_path(board) %>
            <%= link_to 'Delete', board_path(board), data: { method: 'delete' } %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

    <div class="card_new">
      <%= link_to '+ Add new board', new_board_path %>
    </div>
</div>




