.container
  %h2 Edit Card
  = render 'errors_message', task: @task
  = form_with(model: @task, url: board_task_path(@task.board), local: true) do |f|
    .field
      = f.label :title
      %br/
      = f.text_field :title, class: "text"
    .field
      = f.label :description
      %br/
      = f.text_area :description
    .field
      = f.label :deadline
      %br/
      = f.date_field :deadline
    .field
      = f.label :eyecatch
      %br/
      = f.file_field :eyecatch
    .actions
      = f.submit "Submit", class: "btn-primary"
